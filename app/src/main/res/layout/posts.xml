<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="5sp"
    android:visibility="visible"
    android:backgroundTint="@color/black"
    app:cardCornerRadius="15sp"

    app:cardElevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_margin="1sp"
        app:cardCornerRadius="15sp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp">

                <androidx.cardview.widget.CardView
                    android:layout_width="50sp"
                    android:elevation="0dp"
                    app:cardCornerRadius="60sp"

                    android:backgroundTint="@color/yellow"
                    android:layout_height="50sp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="60sp"
                        android:layout_margin="2sp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="0sp"
                            android:id="@+id/profileimg"
                            android:scaleType="centerInside"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/baseline_add_box_24" >

                        </ImageView>
                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>



                <View
                    android:layout_width="10sp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/postby"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Bsilico Eat"
                        android:textColor="@android:color/black" />

                    <TextView

                        android:id="@+id/date"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:gravity="center_vertical"
                        android:text="June 1, 2015"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/posttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textSize="13sp"

                android:layout_marginBottom="5sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam efficitur ipsum in placerat molestie.  Fusce quis mauris a enim sollicitudin"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/img"
                android:layout_gravity="center"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="5sp"

                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/postimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:maxHeight="800sp"
                    android:minHeight="200sp"
                    android:maxWidth="700sp"
                    android:minWidth="200sp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:scaleType="fitXY"
                    />


            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/postfollow"
                    android:layout_width="22sp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25sp"
                    android:background="@drawable/walkone" />

                <ImageButton
                    android:id="@+id/post_save"
                    android:layout_gravity="center"
                    android:layout_width="22sp"
                    android:layout_marginLeft="20sp"
                    android:layout_height="22sp"
                    android:background="@drawable/logo"



                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton

                    android:id="@+id/postshare"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo"

                    app:tint="@color/black" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/postliketext"
                    android:layout_width="17dp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center_vertical"
                    android:text="12"
                    android:textColor="@color/black"  android:layout_height="10sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/black" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>
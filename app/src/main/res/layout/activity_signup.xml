<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_Background"
    tools:context=".SignupActivity">

    <LinearLayout
        android:id="@+id/layout_top_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_logo_signup"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:transitionName="logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kcians"
            android:textSize="40sp"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/textColor"
            android:transitionName="logo_text"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/img_Bottom"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/layout_top_signup"
        android:src="@drawable/background_bottom"
        android:transitionName="img_tree" />

    <LinearLayout
        android:id="@+id/layout_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_Bottom"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Let's join us !"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            app:neumorph_shapeType="pressed">

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/no_background"
                android:hint="Email id"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/teal_700"
                android:textCursorDrawable="@drawable/cursor" />
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            app:neumorph_shapeType="pressed">

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/no_background"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/teal_700"
                android:textCursorDrawable="@drawable/cursor" />
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            app:neumorph_shapeType="pressed">

            <EditText
                android:id="@+id/signup_Confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/no_background"
                android:hint="Confim password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/teal_700"
                android:textCursorDrawable="@drawable/cursor" />
        </soup.neumorphism.NeumorphCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="Need help ?"
            android:textColor="@color/teal_700"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <soup.neumorphism.NeumorphButton
                style="@style/Widget.Neumorph.Button"
                android:id="@+id/signup"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:textStyle="bold"
                android:text="Sign up"
                android:textColor="@color/light_Background"
                android:textSize="16sp"
                app:neumorph_backgroundColor="@color/textColor" />

            <soup.neumorphism.NeumorphButton
                style="@style/Widget.Neumorph.Button"
                android:id="@+id/back_login"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="20dp"
                android:text="Have an Id"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                app:neumorph_backgroundColor="@color/light_Background" />
            <!--            android:layout_marginStart="45dp"-->
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginStart="70dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="or"
                android:layout_marginStart="20dp"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/black" />

        </LinearLayout>


        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:neumorph_shapeType="basin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/login_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:text="Signup with Google Id"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/google" />

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>



    </LinearLayout>
</RelativeLayout>
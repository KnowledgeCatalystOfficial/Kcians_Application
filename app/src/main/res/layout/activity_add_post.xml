<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0sp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/background"
        android:backgroundTint="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text="Add new Post "

            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60sp"
        android:layout_marginTop="60sp"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10sp">

                <androidx.cardview.widget.CardView
                    android:layout_width="70sp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/teal_700"
                    app:cardCornerRadius="50sp"
                    android:layout_marginLeft="10sp"
                    android:layout_height="70sp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="1sp"

                        app:cardCornerRadius="50sp"
                        android:layout_height="match_parent"
                        >


                        <ImageView
                            android:id="@+id/profile"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="20sp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_uid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:text="...................."
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/teal_200"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="0sp"
                            android:layout_height="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:text="Public"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/teal_700" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/teal_700"
                android:foregroundGravity="center"
                app:cardCornerRadius="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintWidth_percent="01">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    app:cardCornerRadius="5sp">
                    <ImageView
                        android:src="@drawable/logo"
                        android:layout_width="40sp"
                        android:padding="7sp"
                        android:layout_height="match_parent"
                        ></ImageView>

                    <TextView
                        android:id="@+id/category_post"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_marginLeft="30sp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="Choose Category"
                        android:padding="0dp"
                        android:paddingLeft="10sp"

                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"


                        tools:ignore="RtlCompat">

                    </TextView>
                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView

                    android:id="@+id/linkview"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="8dp"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintWidth_percent="01"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1sp"
                        app:cardCornerRadius="5sp">
                        <ImageView
                            android:src="@drawable/ic_baseline_group_24"
                            android:padding="7sp"
                            android:layout_width="40sp"

                            android:layout_height="match_parent"
                            ></ImageView>

                        <EditText

                            android:id="@+id/link"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="45sp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:hint="Paste Link"
                            android:padding="0dp"
                            android:layout_marginRight="40sp"
                            android:paddingLeft="0sp"

                            android:singleLine="true"
                            android:textAlignment="viewStart"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"


                            tools:ignore="RtlCompat">

                        </EditText>
                        <ImageView
                            android:id="@+id/cancel_bth"
                            android:src="@drawable/walkone"
                            android:padding="8sp"
                            android:layout_width="40sp"

                            android:layout_gravity="end"
                            android:layout_height="match_parent"
                            ></ImageView>
                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="8dp"
                    android:foregroundGravity="center"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    app:cardCornerRadius="5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintWidth_percent="01">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_margin="1sp"
                        app:cardCornerRadius="5sp">

                        <EditText
                            android:id="@+id/et_post"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="7sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="7sp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:hint="Type Something"
                            android:padding="0dp"
                            android:paddingLeft="10sp"
                            android:singleLine="false"

                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"


                            tools:ignore="RtlCompat">

                        </EditText>
                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="8dp"
                android:foregroundGravity="center"
                app:cardCornerRadius="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintWidth_percent="01">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:layout_margin="1sp"
                    app:cardCornerRadius="5sp">

                    <ImageView
                        android:id="@+id/imagepickerimage"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_margin="20sp"

                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_add_24">

                    </ImageView>
                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        app:layout_constraintVertical_bias="1"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"


        android:layout_marginBottom="0sp"
        android:gravity="bottom"
        android:backgroundTint="@color/white"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="2sp"
            >

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:visibility="gone"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="10sp"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:backgroundTint="@color/background"
                android:layout_margin="1sp"
                app:cardCornerRadius="10sp"

                >
                <LinearLayout
                    android:id="@+id/bt_photo"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="25sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_photo_camera_black_48dp"
                        android:layout_height="25sp"
                        android:layout_marginLeft="10sp"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Add Image"
                        android:gravity="center"
                        android:layout_marginLeft="10sp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="15sp"
            android:layout_height="40sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:backgroundTint="@color/background"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="10sp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="1sp"
                app:cardCornerRadius="10sp"

                >
                <LinearLayout
                    android:id="@+id/bt_submit"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:text="Share Post Now"

                        android:gravity="center"
                        android:layout_marginLeft="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:id="@+id/uploading"
        app:cardCornerRadius="10sp"
        android:layout_height="150sp"
        app:cardElevation="5sp"
        android:outlineAmbientShadowColor="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_height="match_parent">

        </ImageView>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>